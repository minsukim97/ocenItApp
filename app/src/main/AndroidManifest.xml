<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ocenitapp">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <uses-library android:name="org.apache.http.legacy" android:required="false" />
        
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Introduce"
            android:screenOrientation="portrait"/>
        <activity android:name=".Member"
            android:screenOrientation="portrait"/>
        <activity android:name=".Member_click"
            android:screenOrientation="portrait"/>
        <activity android:name=".Research_Field"
            android:screenOrientation="portrait"/>
        <activity android:name=".Progresstask"
            android:screenOrientation="portrait"/>
        <activity android:name=".Thesis"
            android:screenOrientation="portrait"/>
        <activity android:name=".Patent"
            android:screenOrientation="portrait"/>
        <activity android:name=".test"
            android:screenOrientation="portrait"/>
    </application>

</manifest>